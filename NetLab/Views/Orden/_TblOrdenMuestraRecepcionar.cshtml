@*  Descripción: Vista para mostrar informacion de la muestra con codigo QR.
    Author: Terceros.
    Fecha Creacion: 01/01/2017
    Fecha Modificación: 02/02/2017.
    Modificación: Se agregaron comentarios.*@
@model IEnumerable<Model.OrdenMuestra>

<style type="text/css">
    .texto {
        font-size: 12px;
        padding-top: 2px;
    }
</style>


<table id="tableOrdenMuestra" class="table" width="1200">
    <tr>
        <th width="100">Código de Muestra</th>
        <th width="400">Tipo de Muestra</th>
        <th width="120">Fecha Obtención</th>
        <th width="120">Hora Obtención</th>
        <th width="50"></th>
    </tr>

    @if (Model != null)
    {

        <tbody id="tbodyOrdenMuestra">
            @foreach (var item in Model)
            {
            var idMuestra = item.idOrdenMuestra;

            <tr>
                <td>@Html.TextBox("codificacion" + idMuestra, item.MuestraCodificacion.codificacion, new { @class = "form-control input-sm codigoMuestraRecepcion", style = "max-width:120px" })
                @Html.Hidden("idMuestra", idMuestra)</td>
                <td class="texto">@Html.DisplayFor(modelItem => item.TipoMuestra.nombre)</td>
                @*Juan Muga - permitir ingreso manual en datepicker - sacar onkeydown="return false;"*@
                <td>@Html.TextBox("fechaMuestra" + idMuestra, item.fechaColeccionToString, new { @class = "datepickerTelerik dateOnly form-control input-sm", style = "max-width:120px", autocomplete = "off" })</td>
                <td>@Html.TextBox("horaMuestra" + idMuestra, item.horaColeccionToString, new { @class = "timepicker form-control input-sm", style = "max-width:80px" })</td>
                <td class="texto">

                     @*<span class=@Html.Raw(item.TipoMuestra.idTipoMuestra)>
        <!--<a href="@Url.Action("ShowPopupMaterial", "Orden")" class="btnShowPopupMaterial btn-link" title="Agregar Material">

           <img alt="Agregar Material" src="@Url.Content("~/img/001_31.png")">
            Agregar Material
        </a>
    </span>-->*@

                </td>
            </tr>
            }
            </tbody>
            }
</table>
