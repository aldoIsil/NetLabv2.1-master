@* Descripción: Vista para imprimir el codigo de muestra generada.
    Author: Terceros.
    Fecha Creacion: 01/01/2017
    Fecha Modificación: 02/02/2017.
    Modificación: Se agregaron comentarios.*@
@model Model.MuestraCodificacion

<link rel="stylesheet" href="~/Content/chosen.css">

@Html.AntiForgeryToken()



<div>

    @{ var urlTemp = Url.Content("~") + "QR/WFCodBar.aspx?barcode=" + Model.codificacion +
                                              "&MODE=" + 1 +
                                              "&PFMT=" + 0 +
                                              "&IR=" + 20 +
                                              "&X=" + "0.300" +
                                              "&Left_Margin=" + "0.05" +
                                              "&Top_Margin=" + "0.05" +
                                              "&FORMAT=" + "GIF";
    }

    <form>
        <div id="imprimirCodificacion" class="qrDiv">
            <div style="float: left;"><img src="@urlTemp" /> </div>
            <div class="qrCode">@Model.codificacion</div>
        </div>
        @*<a id="btnImprimir" href="#" onclick="printPartOfPage('imprimirCodificacion'); return false;">Imprimir </a>*@
        <a id="btnImprimir" href="#">Imprimir </a>
    </form>

</div>
@section Scripts {
    @Scripts.Render("~/Scripts/App/Orden/Search.js")
}
<style type="text/css">
    .qrCode {
        float: left;
        font-family: monospace;
        word-wrap: break-word;
        display: inline-block;
        font-size: 11px;
        font-weight: bold;
        padding-left: 3px;
        width: 70px;
        padding-left: 3px;
    }

    .qrDiv {
        display: flex;
        border-style: solid;
        border-width: 1px;
        border-color: #000000;
        width: 150px;
        margin: 3px;
        padding: 5px 5px 13px;
    }

        .qrDiv img {
            display: inline-block;
            margin-bottom: -12px;
            margin-right: 5px;
        }
</style>
