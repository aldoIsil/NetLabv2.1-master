@model IEnumerable<Model.Material>
@{ 
    int defaultValue = ViewBag.MaterialPorDefecto != null ? ViewBag.MaterialPorDefecto : 0;
}
@Html.DropDownList("idMaterial",
new SelectList(Model, "idMaterial", "descripcion"),
new { value = "0", @class = "form-control sizeChosen" })
@Html.Hidden("idMaterialDefecto", defaultValue)