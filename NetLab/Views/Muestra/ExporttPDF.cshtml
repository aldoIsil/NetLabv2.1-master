@model IEnumerable<NetLab.Models.PDFCodigoMuestraModel>
@{Layout = null;
}
<!DOCTYPE html>
<html>
<body>
    @foreach (NetLab.Models.PDFCodigoMuestraModel item in Model) {
        <div class="qrDiv">
            <img src="@item.url" /><div class="qrCode">@item.codigo</div>
        </div>
    }
    <style type="text/css">
        .qrCode {
            font-family: monospace;
            word-wrap: break-word;
            display: inline-block;
            font-size: 11px;
            font-weight: bold;
            padding-left: 3px;
            width: 70px;
        }

        .qrDiv {
            display: block;
            border-style: solid;
            border-width: 1px;
            border-color: #000000;
            width: 110px;
            margin: 3px;
            padding: 3px;
        }

            .qrDiv img {
                display: inline-block;
                margin-bottom: 0px;
            }
    </style>
    </body>
</html>
    
