@*  Descripción: Vista, muestra la pantalla para el ingreso metodos de un analito.
    Author: Terceros.
    Fecha Creacion: 01/01/2017
    Fecha Modificación: 02/02/2017.
    Modificación: Se agregaron comentarios.*@
@model NetLab.Models.AnalitoMetodoViewModels


@using (Html.BeginForm("NuevoMetodo", "Analito", new {idAnalito = Model.Metodo.IdAnalito}, FormMethod.Post, new { id = "frmNuevoMetodo" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Componente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.Metodo.Glosa1, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Metodo.Glosa1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Metodo.Glosa1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Metodo.Glosa2, new {@class = "control-label col-md-3"})
            <div class="col-md-6">
                @Html.EditorFor(model => model.Metodo.Glosa2, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Metodo.Glosa2, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Metodo.Orden, new { @class = "control-label col-md-3" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.Metodo.Orden, new { htmlAttributes = new { @class = "form-control", @onkeypress = "return isNumberKey(event)" } })
                @Html.ValidationMessageFor(model => model.Metodo.Orden, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-6">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div id="examenDialog">
</div>
<div>
    @Html.ActionLink("Volver a la lista", "Index", new { id = Model.Metodo.IdAnalito})
</div>
<script type="text/javascript">
    $.validator.unobtrusive.parse("#frmNuevoMetodo");

</script>