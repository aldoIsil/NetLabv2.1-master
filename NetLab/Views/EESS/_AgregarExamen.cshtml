@*  Descripción: Vista que permite seleccionar un examen y registrarlo.
    Author: Terceros.
    Fecha Creacion: 01/01/2017
    Fecha Modificación: 02/02/2017.
    Modificación: Se agregaron comentarios, ventana no utilizada.*@
@model Model.ExamenLaboratorio

<br />
<link rel="stylesheet" href="~/Scripts/jquery.alerts/jquery.alerts.css">
@using (Html.BeginForm("GuardarExamen", "Laboratorio", FormMethod.Post, new { id = "frmAgregarExamen" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdLaboratorio)

    <div class="form-horizontal">
        <br />
        <br/>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.IdExamen, new {@class = "control-label col-md-4"})
            <div class="col-md-7">
                @Html.DropDownListFor(model => model.IdExamen, new SelectList(new List<SelectListItem>()), new
                {
                    id = "idExamen",
                    @class = "form-control input-sm",
                    data_url = @Url.Action("GetExamenes"),
                    data_loading_image = @Url.Content("~/Content/images/loading.gif")
                })
                @Html.ValidationMessageFor(model => model.IdExamen, "", new {@class = "text-danger" })
            </div>
            <div class="col-md-1">
                <label class="text-danger" style="font-size: 14px">*</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiasEmision, new {@class = "control-label col-md-4"})
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.DiasEmision, new { @class = "form-control", style = "width:100px" })
                @Html.ValidationMessageFor(model => model.DiasEmision, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-1">
                <label class="text-danger" style="font-size: 14px">*</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DiasEntrega, new {@class = "control-label col-md-4"})
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.DiasEntrega, new { @class = "form-control", style = "width:100px" })
                @Html.ValidationMessageFor(model => model.DiasEntrega, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-1">
                <label class="text-danger" style="font-size: 14px">*</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-7">

                <label id="btnGuardarExamen" class="btn-link">Grabar</label>

                <input type="button" value="Regresar" id="btnCerrar" class="btn-link hidden" />

                @*<input type="submit" value="Guardar" class="btn-link" />*@
            </div>
        </div>
    </div>
}
<script type="text/javascript">

    $(document).ready(function () {
        selectChosenConfig("idExamen", "Seleccione el Examen");
        $.validator.setDefaults({ ignore: ":hidden:not(select)" });
        $.validator.unobtrusive.parse("#frmAgregarExamen");
    });
</script>
