            $('#hdnDisa').val(selected);

            selected = $('#selInstituciones').val();
            $('#hdnInstitucion').val(selected);

            selected = $('#selmicrored').val();
            $('#hdnMicroRed').val(selected);

            $('#hdnTipo').val('MicroRed');
            $('#frmInstituciones').submit();
        });

    </script>

}