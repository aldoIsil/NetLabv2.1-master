@*  Descripción: Vista, muestra la pantalla para la edicion de las areas de procesamiento.
    Author: Terceros.
    Fecha Creacion: 01/01/2017
    Fecha Modificación: 02/02/2017.
    Modificación: Se agregaron comentarios.*@
@model Model.AreaProcesamiento

@using (Html.BeginForm("EditarArea", "AreaProcesamiento", new { ViewBag.page, ViewBag.search }, FormMethod.Post, new { id = "frmEditarArea" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.IdAreaProcesamiento)

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-1">
                <label class="text-danger" style="font-size: 14px">*</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control", @rows = 4 } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sigla, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.Sigla, new { htmlAttributes = new { @class = "form-control", style = "width:100px" } })
                @Html.ValidationMessageFor(model => model.Sigla, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Activo: ", new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.CheckBoxFor(model => model.EstadoCheck, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" id="someDataFromPartialSomehow" value="@Model.Nombre" />
        <div class="form-group">
            <div class="col-md-offset-4 col-md-7">
                @*<input type="submit" value="Guardar" id="btnGuardar" class="btn btn-primary" />
                    <input type="button" value="Regresar" id="btnCerrar" class="btn btn-primary hidden" />*@


                <button type="submit" value="Guardar" id="btnGuardar" class="btn btn-primary"><span class="fa fa-floppy-o"></span> Guardar</button>
                <button type="button" value="Regresar" id="btnCerrar" class="btn btn-default hidden"><span class="fa fa-angle-double-left"></span> Regresar</button>





            </div>
        </div>
    </div>
}
<div>
    @*@Html.ActionLink("Retroceder", "Index", new {ViewBag.page, ViewBag.search})*@
</div>
<script type="text/javascript">
    $.validator.unobtrusive.parse("#frmEditarArea");
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
