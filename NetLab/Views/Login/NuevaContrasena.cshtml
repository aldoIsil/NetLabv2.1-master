@*  Descripción: Vista, muestra la pantalla para el cambio de contraseña.
    Author: Terceros.
    Fecha Creacion: 01/01/2017
    Fecha Modificación: 02/02/2017.
    Modificación: Se agregaron comentarios.*@
@{
    ViewBag.Title = "NuevaContrasena";
}

<div id="divLogin">

    <div id="divLogo">
        <img src="~/img/logo.jpg" />
    </div>

    <form id="frmLogin" method="post" action="">
        <p>Cambie su Contraseña</p>
        <br />
        <div class="form-group">
            <label for="txtPassword" class="col-md-2 control-label">Contraseña nueva:</label>
            <div class="col-md-10">
                <input id="txtPassword" type="password" name="txtPassword" class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group">
            <label for="txtPassword" class="col-md-2 control-label">Confirmar contraseña:</label>
            <div class="col-md-10">
                <input id="txtConfirmPassword" type="password" name="txtConfirmPassword" class="form-control" />
            </div>
        </div>




        <div class="form-group fg-btn">
            <div class="col-md-offset-2 col-md-10">
                <a id="btnCambiar" href="#">Cambiar</a>
            </div>
        </div>

        <br />

        <div class="form-group linksGroup">

            @if (ViewBag.mensajePasswordnew > 0)
            {
                string mensajePasswordnew = "";
                switch ((int)ViewBag.mensajePasswordnew)
                {

                    case 1: mensajePasswordnew = "Contrasaseñas diferentes"; break;
                    case 2: mensajePasswordnew = "Se realizo el cambio satisfactoriamente"; break;
                    case 3: mensajePasswordnew = "Error en el proceso"; break;

                }
                <br />
                <span class="msj-error">@mensajePasswordnew</span>
                <br />
                <p style="align-content:center">@Html.ActionLink("Salir", "Index", "Login");</p>
            }
        </div>

    </form>


</div>

<style type="text/css">
    .form-group {
        padding-top: 20px;
    }

    .form-control {
        width: 80% !important;
    }

    .fg-btn {
        text-align: right;
        padding-right: 64px;
    }

    .control-label {
        margin-top: 5px;
        margin-top: 0px;
        padding-left: 0px;
    }

    .linksGroup div {
        padding-top: 10px;
    }

    #txtPassword {
        width: 120px;
    }
        #txtConfirmPassword {
        width: 120px;
    }
</style>

<script type="text/javascript">
    // Descripción: funciones de carga para la validacion de los botones y cajas de texto.
    // Author: Terceros.
    // Fecha Creacion: 01/01/2017
    // Fecha Modificación: 02/02/2017.
    // Modificación: Se agregaron comentarios.
    window.onload = function () {
        $('#btnCambiar').click(function () {
            $('#frmLogin').submit();
        });
    };
</script>