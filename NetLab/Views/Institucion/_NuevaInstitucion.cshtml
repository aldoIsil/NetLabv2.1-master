@model Model.Institucion

@using (Html.BeginForm("CrearInstitucion", "Institucion", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("NOMBRE", new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.nombreInstitucion, new { htmlAttributes = new { @class = "form-control  input-sm ValidateLength lettersOnly" } })
                @Html.ValidationMessageFor(model => model.nombreInstitucion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("DESCRIPCION", new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control  input-sm ValidateLength lettersOnly" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-7">
                <input type="submit" value="Guardar" id="btnGuardar" class="btn btn-primary" onclick="return ValidaCampoRequerido();" />
                <input type="button" value="Regresar" id="btnCerrar" class="btn-link hidden" />
            </div>
        </div>
    </div>
}
