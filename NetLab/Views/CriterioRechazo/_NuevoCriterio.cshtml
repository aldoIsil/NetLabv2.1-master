@model NetLab.Models.CriterioRechazo.CriterioViewModels


@using (Html.BeginForm("NuevoCriterio", "CriterioRechazo", new { ViewBag.page, ViewBag.search }, FormMethod.Post, new { id = "frmNuevoCriterio" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Criterio.Glosa, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.Criterio.Glosa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Criterio.Glosa, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-1">
                <label class="text-danger" style="font-size: 14px">*</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoCriterio, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.DropDownListFor(model => model.TipoCriterio.IdTipoCriterio, Model.TipoCriterio.SelectList, new { @class = "form-control", style = "width:150px" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-7">
                <button type="submit" value="Crear" id="btnCrear" class="btn btn-primary"><span class="fa fa-check-square-o"></span> Crear</button>
                <button type="button" value="Regresar" id="btnCerrar" class="btn btn-default hidden"><span class="fa fa-angle-double-left"></span> Regresar</button>
            </div>
        </div>
    </div>
}
