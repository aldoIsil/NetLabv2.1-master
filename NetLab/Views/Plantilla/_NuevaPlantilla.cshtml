@model NetLab.Models.Plantilla.PlantillaViewModels


@using (Html.BeginForm("NuevaPlantilla", "Plantilla", new { ViewBag.page, ViewBag.search }, FormMethod.Post, new { id = "frmNuevaPlantilla" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Plantilla.Nombre, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Plantilla.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Plantilla.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Plantilla.Descripcion, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Plantilla.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Plantilla.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoMuestra, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.TipoMuestra.IdTipoMuestra, Model.TipoMuestra.SelectList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("<<Retroceder", "Index", null, new { id = "closeDialog", @class = "btn btn-default" })
</div>
<script type="text/javascript">
    $.validator.unobtrusive.parse("#frmNuevaPlantilla");
</script>