@*  Descripción: Vista, muestra para crear un nuevo Rol.
    Author: Terceros.
    Fecha Creacion: 01/01/2017
    Fecha Modificación: 02/02/2017.
    Modificación: Se agregaron comentarios.*@
@model NetLab.Models.Rol.RolViewModels

@using (Html.BeginForm("NuevoRol", "Rol", new { ViewBag.page, ViewBag.search }, FormMethod.Post, new { id = "frmNuevoRol" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Rol.nombre, new { @class = "control-label col-md-4" })
            <div class="col-md-8" style="display:flex">
                @Html.EditorFor(model => model.Rol.nombre, new { htmlAttributes = new { @id = "txtNombreRolAgregar", @class = "form-control anchoNombre" } })
                @Html.ValidationMessageFor(model => model.Rol.nombre, "", new { @class = "text-danger" })
                <span class="obligatorio"> *</span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rol.descripcion, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Rol.descripcion, new { rows = "4", cols = "70" })
            </div>
        </div>
        <input type="hidden" value="@ViewBag.nombreRoles" id="nombreroles" />

        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">



                @*<input type="submit" value="Crear" class="btn btn-primary" id="BTNCREAR"/>
                    <input id="btnCerrar" type="submit" value="Volver a la Lista" class="btn-link hidden" />*@



                <button id="BTNCREAR" type="submit" value="Crear" class="btn btn-primary"><span class="fa fa-check-square-o"></span> Crear</button>
                <button type="button" value="Volver a la Lista" id="btnCerrar" class="btn btn-default hidden"><span class="fa fa-angle-double-left"></span> Regresar</button>






            </div>
        </div>
    </div>
}
<div>
    @*@Html.ActionLink("Volver a la Lista", "Index", null, new { id = "closeDialog" })*@
</div>
<script type="text/javascript">
    $.validator.unobtrusive.parse("#frmNuevRol");
</script>
<style type="text/css">
    .anchoNombre {
        width: 250px !important;
    }

    .anchoDescripcion {
        width: 100%;
        max-width: 100%;
    }

    .obligatorio {
        float: left;
        color: red;
        font-weight: bold;
    }
</style>



