                                $("#dialog-edit").closest(".ui-dialog").find(".ui-dialog-titlebar-close").click();
                            });

                            jAlert("Los datos fueron editados correctamente.", "Aviso");
                        }
                    });

                }

                e.preventDefault();
                return false;
            });






