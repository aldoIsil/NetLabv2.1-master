                            jAlert("Los datos fueron registrados correctamente.", "Aviso");
                        }
                    });

                }

                e.preventDefault();
                return false;
            });





            $("body").on("submit", "#frmEditarMaterial", function (e) {

                var ok = false;

               
                var volumen = $.trim($('#volumen').val());

                

                if (volumen === '') {
                    jAlert("Ingrese el volumen.", "¡Alerta!");

                } else {
                    ok = true;
                }

                if (ok ) {
                    $.ajax({
                        type: "POST",
