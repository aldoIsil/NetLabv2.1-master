@*  Descripción: Vista, muestra la pantalla de
    ingreso de datos para editar un material
    Author: Terceros.
    Fecha Creacion: 01/01/2017
    Fecha Modificación: 02/02/2017.
    Modificación: Se agregaron comentarios.*@
@model Model.Material

<link rel="stylesheet" href="~/Content/chosen.css">

@using (Html.BeginForm("EditarMaterial", "Material", new { ViewBag.page, ViewBag.search }, FormMethod.Post, new { @id = "frmEditarMaterial" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Material</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <!--Tipo Muestra-->
        <div class="form-group">

            @Html.Label("TipoMuestra:", htmlAttributes: new { @class = "control-label col-md-4",@style="padding-top:0px !important" })


            <div class="col-md-7">
          
                @ViewBag.nombretipomuestra
                
            </div>
        </div>

        <!-- Presentacion-->
        <div class="form-group">

            @Html.Label("Presentación:", htmlAttributes: new { @class = "control-label col-md-4", @style = "padding-top:0px !important" })


            <div class="col-md-7">
             
             @ViewBag.nombrepresentacion
            </div>
        </div>


        <!--reactivo-->
        <div class="form-group">

            @Html.Label("Reactivo:", htmlAttributes: new { @class = "control-label col-md-4", @style = "padding-top:0px !important" })


            <div class="col-md-7">
                
                @ViewBag.nombrereactivo
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.volumen, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.TextBoxFor(model => model.volumen, new { @class = "form-control", @style = "width: 100px"})
                @Html.ValidationMessageFor(model => model.volumen, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Activo: ", new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @if (Model.estado == 1)
                {
                    @Html.CheckBox("chkActivoRol", true)
                }
                else
                {
                    @Html.CheckBox("chkActivoRol", false)
                }
            </div>
        </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-7">
                    <input type="submit" value="Guardar" id="btnGrabar" class="btn btn-primary" />
                    <input type="button" value="Regresar" id="btnCerrar" class="btn-link hidden" />
                </div>
            </div>
        </div>


}
<div id="examenDialog">
</div>
<div>
