@model PagedList.IPagedList<Model.Reactivo>
@using PagedList.Mvc;
@using NetLab.Helpers;

@{
    ViewBag.Title = "Mantenimiento de Reactivos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Scripts/jquery.alerts/jquery.alerts.css">
<h2 class="text-primary">Reactivo</h2>
@using (Html.BeginForm("Index", "Reactivo", FormMethod.Get))
{
    <label>Ingrese un Nombre o descripción:</label>
    @Html.TextBox("search", (string)ViewBag.search, new { style = "width:250px" })
    @*<input type="submit" value="Buscar" class="btn-link" />*@
    <button class="btn btn-primary" type="submit" id="btnBuscar" value="Buscar"> <span class="glyphicon glyphicon-search"></span> Buscar</button>




    @Html.ActionLink(" Nuevo", "NuevoReactivo", new { ViewBag.page, ViewBag.search }, new { id = "openDialog", @class = "btn btn-primary fa fa-plus-square-o" })
}
<br />

@if (ViewBag.mensaje > 0)
{
    string faultMsg = "";
    switch ((int)ViewBag.mensaje)
    {

        case 1: faultMsg = "No se encontraron registros…"; break;
        case 2: faultMsg = ""; break;

    }
    <br />
    <span class="msj-error">@faultMsg</span>
}

<br />

@if (Model != null && Model.TotalItemCount > 0)
{
    <table class="table table-responsive" id="mydata">
        <thead>
            <tr>
                <th width="220">
                    @Html.DisplayNameFor(model => model.First().glosa)
                </th>
                <th width="80">
                    @Html.DisplayNameFor(model => model.First().Estado)
                </th>
                <th width="50">Editar</th>
                <th width="100">Presentación</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.glosa)
                </td>
                @*<td>
                        @(item.Estado == 1 ? Html.Label("Activo") : Html.Label("Inactivo"))
                    </td>*@
                <td class="text-center">
                    @if (item.Estado == 1)
                    {
                        <p style="color:#006f03;">Activo</p>
                    }
                    else
                    {
                        <p style="color:rgb(255,0,0);">Inactivo</p>
                    }
                </td>
                <td>
                    @Html.ActionLink(" ", "EditarReactivo", new { id = item.idReactivo, page = Model.PageNumber, ViewBag.search }, new { @class = "btn btn-default btn-block fa fa-pencil-square-o editDialog" })
                    @*@Html.ActionLink("Eliminar", "EliminarReactivo", new { id = item.idReactivo, page = Model.PageNumber, ViewBag.search }, new { @class = "confirmDialog" })*@
                </td>
                <td>
                    @Html.ActionLink(" ", "Presentacion", new { id = item.idReactivo }, new { @class = "btn btn-default btn-block fa fa-flask" })
                </td>
            </tr>
        }
    </table>

}
@*else
    {
        @Html.EmptyTable()
    }*@

@if (Model != null)
{
    //Alexander Buchelli - inicio - fecha 7/12/18 -Se comento el boton de selector de pagina

